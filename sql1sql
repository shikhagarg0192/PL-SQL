SET SERVEROUTPUT ON;

DECLARE
FLAG_NULL BOOLEAN;
SAL EMPLOYEE.SALARY%TYPE;
ID1 EMPLOYEE.ID%TYPE;
BEGIN
  SELECT SALARY, ID INTO SAL,ID1 
  FROM EMPLOYEE
  WHERE FIRST_NAME = 'Jason3';
    IF SAL IS NULL THEN
      FLAG_NULL := TRUE;
    ELSE IF SAL >= 2000 THEN
      DBMS_OUTPUT.PUT_LINE('SALARY IS GREATER THAN 2000');
      UPDATE EMPLOYEE
      SET SALARY = 2000
      WHERE ID = ID1;
      DBMS_OUTPUT.PUT_LINE('SALARY IS UPDATED TO 2000');
      END IF;
    END IF;
IF FLAG_NULL THEN
  DBMS_OUTPUT.PUT_LINE('SALARY IS NULL');
END IF;
END;



declare
fname employee.first_name%type;







ALTER SESSION SET CURRENT_SCHEMA = SHIKHA_3

SELECT * FROM EMPLOYEE;